<h1>Trips</h1>

{{#trips}}
  <h2>{{description}}</h2>
  <a href="/trips/edit/{{id}}">Edit</a>
  <a href="/trips/delete/{{id}}">Delete</a>
{{/trips}}

{{#empty}}
  <p>The list is empty.</p>
{{/empty}}

<div id="add-trips">
	
	<h1>Add a product</h1>
	<form action="trips/add" method="POST">
		Description: <input type="text" name="description">	
		<input type="submit">
	</form>
</div>

